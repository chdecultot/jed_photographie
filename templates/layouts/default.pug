include ../mixins/flash-messages

doctype html
html

            //- HTML HEADER
            head
                    meta(charset="utf-8")
                    meta(name="viewport", content="width=device-width, initial-scale=1.0")
                    meta(http-equiv="X-UA-Compatible" content="IE=edge")
                    meta(name="description", content="Découvrez une photothèque dédiée aux voyages, à l'architecture, aux sports de glisse ...")

                    title= title || 'JED Photographie'
                    link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")

                    //Nivo-Lightbox plugin
                    link(href="/styles/Nivo-Lightbox/nivo-lightbox.css", rel="stylesheet")
                    link(href="/styles/Nivo-Lightbox/themes/default/default.css", rel="stylesheet")
                    
                    
                    //Animate.css
                    link(href="/styles/animate.min.css", rel="stylesheet", type="text/css")
                    
                    
                    //- Customise the stylesheet for your site by editing /public/styles/site.sass
                    link(href="/styles/site.css", rel="stylesheet")
                    link(href="/styles/font-awesome/css/font-awesome.min.css", rel="stylesheet")
                    link(href="/styles/responsiveness.css", rel="stylesheet", type="text/css")
                    
                    //- This file provides the default styling for the KeystoneJS Content Editor
                    if user && user.canAccessKeystone
                            link(href="/keystone/styles/content/editor.min.css", rel="stylesheet")

                    //- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
                    //- Safely remove this block if you are not targeting IE8
                    //-[if lt IE 9]
                            script(src="//cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.js")
                            script(src="//cdn.jsdelivr.net/respond/1.4.2/respond.min.js")
                    //-[endif]

                    //Favicon
                    link(href="/favicon.png" rel="shortcut icon" type="image/png")
                    
                    //- Include template-specific stylesheets by extending the css block
                    block css

                    //- Add any other template-specific HEAD tags by extending the head block
                    block head
                    
                    //Google Analytics
                    script(type="text/javascript").
                      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
                            
                      ga('create', 'UA-85408804-1', 'auto');
                      ga('send', 'pageview');
                                
                      
            //- HTML BODY
            body
             
                    //NAVIGATION PANEL
                    include ./navigation
                    
                    //- HEADER
                    //include ./header
                    
                    //- BODY
                    main

                            //- NOTE:
                            //- There is no .container wrapping class around body blocks to allow more flexibility in design.
                            //- Remember to include it in your templates when you override the intro and content blocks!

                            //- The Intro block appears above flash messages (used for temporary information display)
                            block intro

                            //- Flash messages allow you to display once-off status messages to users, e.g. form
                            //- validation errors, success messages, etc.
                            +flash-messages(messages)

                            //- The content block should contain the body of your template's content
                            block content


                    //- FOOTER
                    #footer-nav

                           -var year = new Date().getFullYear()
                           p © 2016-#{year} JED Photographie. Tous droits réservés.
                             br
                             |Made with ღ by 
                             a#dokos(href="https://dokos.io" target="_blank") DOKOS

                    //- Javascript

                    //- jQuery 1.11.3 is included by default, and required by both Bootstrap
                    //- and the KeystoneJS Content Editor. If you are not targeting IE8,
                    //- you can upgrade to 2.1.4 (also bundled) for better performance.
                    script(src='/js/jquery/jquery-1.11.3.min.js')

                    //- Customise which Bootstrap javascript files are served by including
                    //- them specifically here, instead of bootstrap-3.3.5.min.js
                    script(src='/js/bootstrap/bootstrap-3.3.5.min.js')

                    //- The KeystoneJS Content Editor provides support for ks-editable data attributes,
                    //- which generate links to edit content for users who can access Keystone
                    if user && user.canAccessKeystone
                            script(src='/keystone/js/content/editor.js')

                    //- Add scripts that are globally required by your site here.

                    script(src='/js/je-photographie.js')
                    
                    // Nivo-Lightbox
                    script(src="js/Nivo-Lightbox/nivo-lightbox.min.js" type="text/javascript")
                    script(type="text/javascript").
                      $('#portfolio a').nivoLightbox({
                        effect: 'fade',
                      });
                    
                    script(type="text/javascript"). 
                     $(document).ready(function(){
                       $('a').nivoLightbox();
                     });
                    
                    //Wow
                    script(src="js/wow/wow.min.js")
                    script new WOW().init();
                    
                    //jQuery Easing
                    script(src="js/jquery.easing.min.js" type="text/javascript")
                    
                    script(src="js/SmoothScroll.js" type="text/javascript")
                    script(src="js/cbpAnimatedHeader.js" type="text/javascript")
                    script(src="js/classie.js" type="text/javascript")
                                        
                    //- Include template-specific javascript files by extending the js block
                    block js
